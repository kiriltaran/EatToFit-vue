{
  "name": "eattofit",
  "description": "EatToFit: fitness application",
  "version": "1.0.0",
  "author": "kiriltaran <kiriltaran@gmail.com>",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot --progress",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "lint": "eslint --fix ./src --ext .js --ext .vue"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module"
    },
    "env": {
      "browser": true
    },
    "extends": [
      "plugin:vue/base",
      "plugin:vue/essential",
      "plugin:vue/strongly-recommended",
      "plugin:vue/recommended",
      "airbnb-base",
      "prettier"
    ],
    "plugins": ["vue", "html", "import", "promise"]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "chart.js": "^2.7.2",
    "element-ui": "^2.2.2",
    "firebase": "^4.11.0",
    "vue": "^2.5.16",
    "vue-chartjs": "^3.2.1",
    "vue-ionicons": "^2.2.1",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-component": "^1.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-vue-app": "^2.0.0",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-vue": "^4.3.0",
    "file-loader": "^1.1.11",
    "node-sass": "^4.8.2",
    "prettier": "^1.11.1",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "vue-loader": "^13.7.1",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.2"
  }
}
